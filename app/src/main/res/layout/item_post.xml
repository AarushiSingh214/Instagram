<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_marginLeft="5dp"
        tools:text="rahul" />

    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:layout_below="@+id/tvUsername"
        tools:srcCompat="@tools:sample/avatars" />

    <ImageView
        android:id="@+id/ivHeart"
        android:layout_width="35dp"
        android:layout_height="29dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignParentStart="true"
        android:src="@drawable/ufi_heart"/>

    <ImageView
        android:id="@+id/ivComment"
        android:layout_width="35dp"
        android:layout_height="29dp"
        android:layout_toRightOf="@id/ivHeart"
        android:layout_below="@id/ivImage"
        android:src="@drawable/ufi_comment" />

    <ImageView
        android:id="@+id/ivSend"
        android:layout_width="35dp"
        android:layout_height="30dp"
        android:layout_toRightOf="@id/ivComment"
        android:layout_below="@id/ivImage"
        android:src="@drawable/ufi_new_direct" />

    <ImageView
        android:id="@+id/ivSave"
        android:layout_width="35dp"
        android:layout_height="29dp"
        android:layout_below="@+id/ivImage"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/ufi_save" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/ivHeart"
        tools:text="trying to look hipster" />

</RelativeLayout>